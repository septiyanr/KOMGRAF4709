import numpy as np
import math

def translasi_matrix(tx, ty):
    return np.array([[1, 0, tx],
                     [0, 1, ty],
                     [0, 0, 1]])

def rotasi_matrix(theta):
    return np.array([[math.cos(theta), -math.sin(theta), 0],
                     [math.sin(theta), math.cos(theta), 0],
                     [0, 0, 1]])

def scaling_matrix(sx, sy):
    return np.array([[sx, 0, 0],
                     [0, sy, 0],
                     [0, 0, 1]])

def transformasi(p, matrix):
    p_homogeneous = np.array([p[0], p[1], 1])
    hasil_transformasi = np.dot(matrix, p_homogeneous)
    return hasil_transformasi[:2]  


p = np.array([1, 3])


tx1, ty1 = 3, 3
tx2, ty2 = 7, 3
theta = math.radians(45)  # Rotasi 45 derajat dalam radian
sx = 2
sy = 0.5

matrix_translasi1 = translasi_matrix(tx1, ty1)
matrix_translasi2 = translasi_matrix(tx2, ty2)
matrix_rotasi = rotasi_matrix(theta)
matrix_scaling = scaling_matrix(sx, sy)


titik_translasi1 = transformasi(p, matrix_translasi1)
titik_translasi2 = transformasi(titik_translasi1, matrix_translasi2)
titik_rotasi = transformasi(titik_translasi2, matrix_rotasi)
titik_scaling = transformasi(titik_rotasi, matrix_scaling)


print("Matriks Translasi 1:")
print(matrix_translasi1)
print("\nMatriks Translasi 2:")
print(matrix_translasi2)
print("\nMatriks Rotasi:")
print(matrix_rotasi)
print("\nMatriks Scaling:")
print(matrix_scaling)

print("\nTitik Awal:", p)
print("Hasil Translasi 1:", titik_translasi1)
print("Hasil Translasi 2:", titik_translasi2)
print("Hasil Rotasi:", titik_rotasi)
print("Hasil Scaling:", titik_scaling)
